@model IEnumerable<Notification>
@{
    ViewData["Title"] = "All Notifications";
}

<div class="container py-4">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info alert-dismissible fade-in" role="alert">
            @ViewBag.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
	}
    
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade-in" role="alert">
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
	}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-light mb-0">
            <i class="fas fa-bell me-2 text-warning"></i> All Notifications
        </h2>

        @if (Model.Any())
        {
            <form asp-controller="Notification" asp-action="ClearNotifications" method="post" class="m-0">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-outline-danger">
                    <i class="fas fa-trash-alt me-1"></i> Clear All
                </button>
            </form>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center text-muted py-5">
            <i class="fas fa-info-circle fa-2x d-block mb-3"></i>
            <span>No notifications yet.</span>
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var notification in Model)
            {
                @await Html.PartialAsync("_NotificationItem", notification)
            }
        </div>
    }
</div>
