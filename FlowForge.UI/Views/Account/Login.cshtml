@using FlowForge.Core.DTO
@model LoginDTO
@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card bg-dark text-white shadow-lg rounded-4 border-secondary">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold">Welcome Back</h3>
                        <p class="text-muted">Sign in to continue to your account</p>
                    </div>

                    <form asp-action="Login" asp-controller="Account" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
                        <div class="mb-4 position-relative">
                            <label asp-for="Email" class="form-label"><i class="fas fa-envelope me-2"></i>Email address</label>
                            <input asp-for="Email" class="form-control bg-secondary text-white border-0" placeholder="example@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 position-relative">
                            <label asp-for="Password" class="form-label"><i class="fas fa-lock me-2"></i>Password</label>
                            <input asp-for="Password" type="password" class="form-control bg-secondary text-white border-0" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                            </div>
                            <a href="#" class="text-light text-decoration-underline">Forgot password?</a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>

                        <div asp-validation-summary="ModelOnly" class="text-danger mt-2">
                            @if (ViewBag.Errors != null)
                            {
                                <div class="alert alert-danger">
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var error in ViewBag.Errors)
                                        {
                                            <li><i class="fas fa-exclamation-circle me-2 text-danger"></i>@error</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="mb-0 text-light">
                            Don't have an account?
                            <a asp-action="Register" asp-controller="Account" class="fw-bold text-decoration-underline">Register here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
