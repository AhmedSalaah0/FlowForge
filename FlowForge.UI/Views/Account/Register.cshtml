@using FlowForge.Core.DTO
@model RegisterDTO
@{
    ViewBag.Title = "Register";
}
<div class="register-container mt-4 px-3">
    <div class="card bg-dark text-white shadow-lg rounded-4 border-secondary p-4">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                        <h3 class="fw-bold">Create Account</h3> 
                    </div>

                    <form asp-action="Register" asp-controller="Account" method="post">
                        <div class="mb-4">
                            <label asp-for="PersonName" class="form-label">
                                <i class="fas fa-user me-2"></i>Full Name
                            </label>
                            <input asp-for="PersonName" class="form-control bg-secondary text-white border-0" placeholder="Enter your name" />
                            <span asp-validation-for="PersonName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email address
                            </label>
                            <input asp-for="Email" class="form-control bg-secondary text-white border-0" placeholder="example@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input asp-for="Password" class="form-control bg-secondary text-white border-0" placeholder="Minimum 6 characters" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-2"></i>Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control bg-secondary text-white border-0" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </button>

                        <div asp-validation-summary="ModelOnly" class="text-danger small mt-2"></div>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="mb-0 text-light">
                            Already have an account?
                            <a asp-action="Login" asp-controller="Account" class="fw-bold text-decoration-underline">Login here</a>
                        </p>
                    </div>
                </div>
            </div>
       </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}