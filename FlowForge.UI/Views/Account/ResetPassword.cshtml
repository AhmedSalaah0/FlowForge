@model ResetPasswordDTO
@{
    ViewBag.Title = "Reset Password";
}

@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">@error.ErrorMessage</div>
    }
}

<div class="d-flex justify-content-center align-items-center mt-4 px-3">
    <div class="card bg-dark text-white shadow-lg rounded-4 border-secondary p-4 p-md-5"
         style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <i class="fas fa-user-circle fa-3x text-primary mb-3"></i>
            <h3 class="fw-bold">Reset Password</h3>
        </div>
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="token" />
            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Email address
                </label>

                <input asp-for="Email" class="form-control bg-secondary text-white border-0"
                       readonly />

                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password"
                       class="form-control bg-secondary text-white border-0"
                       placeholder="Enter your new password" />

                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>

                <input asp-for="ConfirmPassword" type="password"
                       class="form-control bg-secondary text-white border-0"
                       placeholder="Re-enter your new password" />

                <button type="submit" class="btn btn-primary w-100 py-2 mt-4">
                    <i class="fas fa-key me-2"></i>
                    Reset Password
                    </button>
            </div>
        </form>
    </div>
</div>
                 

