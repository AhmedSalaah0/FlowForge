@model GroupAddRequest
@{
    ViewBag.Title = "Adding new group";
}


<form asp-controller="Groups" asp-action="AddGroup" class="add-group-form">
    <div class="form-group">
        <label asp-for="groupTitle">Group Title</label>
        <input asp-for="groupTitle" class="input-field" />
    </div>

    <div class="form-group">
        <label>Choose a color</label>
        <div class="color-picker">
            @for (int i = 0; i < ViewBag.ColorOptions.Count; i++)
            {
                var color = ViewBag.ColorOptions[i] as string;
                <label class="color-option">
                    <input asp-for="selectedColor" type="radio" value="@color" />
                    <span class="checkmark">✔</span>
                    <div class="circle" style="background-color: @color;"></div>
                </label>
            }

        </div>
    </div>

    <button type="submit" class="submit-button">Save</button>
</form>
